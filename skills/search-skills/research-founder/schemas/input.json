{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Founder Input",
  "description": "Input schema for the research-founder skill",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Unique client identifier"
    },
    "founder_name": {
      "type": "string",
      "description": "Founder's full name"
    },
    "founder_title": {
      "type": "string",
      "description": "Founder's role/title"
    },
    "linkedin_url": {
      "type": "string",
      "format": "uri",
      "description": "LinkedIn profile URL"
    },
    "twitter_handle": {
      "type": "string",
      "description": "Twitter/X handle (without @)"
    },
    "other_profiles": {
      "type": "array",
      "items": {"type": "string", "format": "uri"},
      "description": "Other social/content profile URLs"
    },
    "company_name": {
      "type": "string",
      "description": "Company name for context (helps find correct profile)"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for cost tracking"
    },
    "execution_mode": {
      "type": "string",
      "enum": ["suggest", "preview", "execute"],
      "default": "suggest"
    }
  },
  "required": ["client_id", "founder_name"],
  "additionalProperties": false
}
