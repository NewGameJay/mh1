{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Company Input",
  "description": "Input schema for the research-company skill",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Unique client identifier"
    },
    "company_name": {
      "type": "string",
      "description": "Official company name"
    },
    "website_url": {
      "type": "string",
      "format": "uri",
      "description": "Primary company website URL"
    },
    "additional_urls": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "Additional URLs to analyze (blog, docs, etc.)"
    },
    "industry": {
      "type": "string",
      "description": "Industry vertical (auto-detected if not provided)"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for cost tracking (defaults to client_id)"
    },
    "execution_mode": {
      "type": "string",
      "enum": ["suggest", "preview", "execute"],
      "default": "suggest",
      "description": "Execution mode"
    },
    "depth": {
      "type": "string",
      "enum": ["quick", "standard", "deep"],
      "default": "standard",
      "description": "Research depth: quick (5 pages), standard (20 pages), deep (50+ pages)"
    }
  },
  "required": ["client_id", "company_name", "website_url"],
  "additionalProperties": false
}
