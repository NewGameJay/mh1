{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Competitors Input",
  "description": "Input schema for the research-competitors skill",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Unique client identifier"
    },
    "company_name": {
      "type": "string",
      "description": "Client company name"
    },
    "industry": {
      "type": "string",
      "description": "Industry vertical for competitor identification"
    },
    "known_competitors": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Known competitor names or URLs to include"
    },
    "competitor_count": {
      "type": "integer",
      "minimum": 3,
      "maximum": 10,
      "default": 5,
      "description": "Number of competitors to analyze"
    },
    "company_research_path": {
      "type": "string",
      "description": "Path to company research JSON (auto-detected if not provided)"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier for cost tracking"
    },
    "execution_mode": {
      "type": "string",
      "enum": ["suggest", "preview", "execute"],
      "default": "suggest"
    }
  },
  "required": ["client_id", "company_name", "industry"],
  "additionalProperties": false
}
